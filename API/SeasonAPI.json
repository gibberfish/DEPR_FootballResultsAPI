{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Football Results Analyser",
        "description": "An API for the Football Results Analyser",
        "contact": {
            "name": "Mark Fowler",
            "email": "themindbadger@gmail.com",
            "url": "http://yettobedecided"
        }
    },
    "host": "api.fra.mindbadger",
    "basePath": "/v1",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/vnd.api+json"
    ],
    "produces": [
        "application/vnd.api+json"
    ],
    "paths": {
        "/seasons": {
            "get": {
                "tags": [
                    "Seasons", "get"
                ]
                "description": "Returns all seasons",
                "operationId": "findSeasons",
                "produces": [
                    "application/vnd.api+json"
                ],
                "responses": {
                    "200": {
                        "description": "List of seasons",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/season"
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            },
            "post": {
                "description": "Creates a new season.",
                "operationId": "addSeason",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "season",
                        "in": "body",
                        "description": "Season to be added",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/season"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "pet response",
                        "schema": {
                            "$ref": "#/definitions/season"
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            }
        },
        "/seasons/{seasonNumber}": {
            "get": {
                "description": "Returns a season",
                "operationId": "findSeasonById",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "seasonNumber",
                        "in": "path",
                        "description": "ID of season to fetch",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "season response",
                        "schema": {
                            "$ref": "#/definitions/season"
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            }
        },
        "/seasons/{seasonNumber}/divisions": {
            "get": {
                "description": "Get divisions for the specified season"
            }
        },
        "/seasons/{seasonNumber}/divisions/{divisionId}/teams": {
            "get": {
                "description": "Get teams for the specified divsision and season"
            }
        },
        "/seasons/{seasonNumber}/divisions/{divisionId}/fixtures": {
            "get": {
                "description": "Get fixtures for the specified division and season"
            },
            "post": {
                "description": "Adds a new fixture for the specified division and season"
            }    
        },
        "/seasons/{seasonNumber}/fixtures": {
            "get": {
                "description": "Get fixtures for the specified season (all divisions)"
            }    
        }
    },
    "definitions": {
        "season": {
            "type": "object",
            "required": [
                "seasonNumber"
            ],
            "properties": {
                "seasonNumber": {
                    "type": "integer",
                    "format": "int64"
                }
            }
        },
        "division": {
            "type": "object",
            "required": [
                "id,name"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        
        "errorModel": {
            "type": "object",
            "required": [
                "code",
                "message"
            ],
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}